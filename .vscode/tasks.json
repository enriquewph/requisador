{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm start",
			"type": "shell",
			"command": "npm",
			"args": [
				"start"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "npm build",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": ["$tsc"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "serve dist",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"http.server",
				"8000"
			],
			"options": {
				"cwd": "${workspaceFolder}/dist/browser"
			},
			"group": "test",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}